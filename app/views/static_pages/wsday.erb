						<div class="co-icon">						
	          <%= image_tag "coins.svg", :class => "icon"%>
	        	</div>
              <h3>Donors</h3>
	        </div>
	        	<h3 class="c-o">Make a donation to WSC’s World Spine Day Campaign</h3>
	        		<div class="donations">
